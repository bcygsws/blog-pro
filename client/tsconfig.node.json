{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    /*让@路径别名，具有路径联想功能*/
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    /*naive ui框架对Volar的支持*/
    "types": [
      "naive-ui/volar"
    ]
  },
  // 例如：router/index.ts识别，需要在两个分开的json文件中添加配置
  "include": [
    "vite.config.ts",
    "src/**/*.ts"
  ]
}
